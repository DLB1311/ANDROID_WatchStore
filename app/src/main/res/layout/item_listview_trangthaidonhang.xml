<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_trangthaidonhang"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#404040"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgWatch_trangthaidonhang"
                android:src="@drawable/rolex1"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txtTrangThai_trangthaidonhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Progressing"
                    android:textStyle="bold"
                    android:textColor="#C09E57"
                    android:textSize="28sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OrderDate Time: "
                        android:textColor="#F4F4F4"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/date_trangthaidonhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12-12-1212 11:11:11"
                        android:textColor="#F4F4F4"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Price_trangthaidonhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="$14 039 456"
                    android:textColor="#C09E57"
                    android:textSize="32sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>